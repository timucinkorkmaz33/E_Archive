@model Register


<ol class="breadcrumb">
    @* tüm sayfalarda bunu kullancağız. *@
    <li class="active">Kullanıcı</li>
    <li class="active">Kullanıcı Düzenle</li>

</ol>
<!-- MAIN CONTENT -->
<div id="content">


    <section id="widget-grid" class="">

        <!-- row -->
        <div class="row">

            <!-- NEW WIDGET START -->
            <article class="col-xs-7 col-sm-7 col-md-7 col-lg-7 ">

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-color-blueLight" id="wid-id-4" data-widget-colorbutton="false"
                     data-widget-editbutton="false"
                     data-widget-togglebutton="false"
                     data-widget-deletebutton="false"
                     data-widget-fullscreenbutton="false"
                     data-widget-custombutton="false">
                    <!-- widget options:
            usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

            data-widget-colorbutton="false"
            data-widget-editbutton="false"
            data-widget-togglebutton="false"
            data-widget-deletebutton="false"
            data-widget-fullscreenbutton="false"
            data-widget-custombutton="false"
            data-widget-collapsed="true"
            data-widget-sortable="false"

        -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Kullanıcı Düzenle</h2>

                    </header>

                    <!-- widget div-->
                    <div>

                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->

                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">



                            <form action="@Url.Action("EditUsers", "Account")" method="POST" id="smart-form-register" class="smart-form client-form">

                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                @Html.HiddenFor(model => model.Id)

                                <fieldset>


                                    <div class="col-md-12">
                                        <div class="form-group col-md-12">
                                            <section class=" col-lg-12">
                                                <label class=" input col-md-2">@Html.DisplayNameFor(model => model.Username)</label>
                                                <div class="col-md-9">
                                                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @maxlength = 17, @class = "form-control" }, @name = "code" })
                                                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })

                                                </div>
                                            </section>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group col-md-12">
                                            <section class=" col-lg-12">
                                                <label class=" input col-md-2">@Html.DisplayNameFor(model => model.Name)</label>
                                                <div class="col-md-9">
                                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { style = "width: 90%; ", @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

                                                </div>
                                            </section>
                                        </div>
                                    </div>

                                    <div class="col-md-12">
                                        <div class="form-group col-md-12">
                                            <section class=" col-lg-12">
                                                <label class=" input col-md-2">@Html.DisplayNameFor(model => model.Surname)</label>
                                                <div class="col-md-9">
                                                    @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { style = "width: 90%; ", @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })

                                                </div>
                                            </section>
                                        </div>
                                    </div>

                                    <div class="form-group col-md-12">
                                        <section class=" col-md-12">
                                            <label class=" input col-md-2">@Html.DisplayNameFor(model => model.Email) </label>
                                            <div class="col-md-5">
                                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                            </div>
                                        </section>
                                    </div>
                                    

                                    <div class="form-group col-md-12">
                                        <section class=" col-md-12">
                                            <label class=" input col-md-2">@Html.DisplayNameFor(model => model.Password)</label>
                                            <div class="col-md-5">
                                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" }, @maxlength = 201, @name = "name2" })
                                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                            </div>
                                        </section>
                                    </div>
                                    <div class="form-group col-md-12">
                                        <section class=" col-md-12">
                                            <label class=" input col-md-2">@Html.DisplayNameFor(model => model.ConfirmPassword)</label>
                                            <div class="col-md-5">
                                                @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", @type = "password" }, @maxlength = 201, @name = "name2" })
                                                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                                            </div>
                                        </section>
                                    </div>


                                </fieldset>

                                <div class="form-group">


                                    <section class="col col-lg-10 col-md-10 col-sm-10 col-xs-10">
                                        <a href="#" onclick="location.href = '@Url.Action("Index", "Account")';return false;" class="btn btn-primary btn-circle btn-lg">
                                            <i class="glyphicon glyphicon-list"></i>
                                        </a>
                                    </section>
                                    <section class="col col-2">
                                        <a onclick="document.getElementById('smart-form-register').submit();" class="btn btn-primary btn-circle btn-lg">
                                            <i class="glyphicon glyphicon-ok"></i>
                                        </a>
                                    </section>
                                </div>
                            </form>



                        </div>
                        <!-- end widget content -->

                    </div>
                    <!-- end widget div -->

                </div>
                <!-- end widget -->
            </article>
            <!-- WIDGET END -->

        </div>

        <!-- end row -->
        <!-- row -->

        <div class="row">

            <!-- a blank row to get started -->
            <div class="col-sm-12">
                <!-- your contents here -->
            </div>

        </div>

        <!-- end row -->
    </section>
    <!-- end widget grid -->
</div>

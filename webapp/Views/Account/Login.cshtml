@model SmartAdminMvc.Models.Login
@using CaptchaMvc.HtmlHelpers


@{

    Layout = null;
}

@Styles.Render("~/content/smartadmin")
<script src='https://www.google.com/recaptcha/api.js' type="text/javascript"></script>
<style>
    body {
        background: url('../../Content/img/giris.jpg') no-repeat center center fixed;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
    }
</style>
<body>
    <div style="width: 98%">
        <div class="row">


            <div>
                <div class="row">
                    <center> <span id="logo"> <img src="/Content/img/logo.png" style="margin-left: -65%; width: 300px; height: 110px;  text-align: center" alt="Logo"> <img src="/Content/img/arsiv.png" style="margin-left: 75%;margin-top:-55%; width: 200px; height: 80px; text-align: center" alt="arsiv"></span><br /></center>

                    <div class="well no-padding" style="margin-top: 1%; margin-left: 40%; width: 25%; opacity: 0.85;">

                        <form action="@Url.Action("login", "account")" method="POST" id="login-form" class="smart-form client-form">

                            @*@Html.HiddenFor(m => m.ReturnUrl)*@
                            @Html.AntiForgeryToken()
                            @Html.ValidationBootstrap()
                            <fieldset>
                                <section>
                                    <label class="label">Kullanıcı Adı:</label>
                                    <label class="input">
                                        <i class="icon-append fa fa-user"></i>
                                        <input type="text" name="username" placeholder="Kullanıcı Adı">
                                        <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Lütfen Kullanıcı Adını Giriniz.</b>
                                    </label>
                                </section>

                                <section>
                                    <label class="label">Şifre</label>
                                    <label class="input">
                                        <i class="icon-append fa fa-lock"></i>
                                        <input type="password" name="password" placeholder="Şifre">
                                        <b class="tooltip tooltip-top-right"><i class="fa fa-lock txt-color-teal"></i> Lütfen Şifrenizi Giriniz</b>
                                    </label>
                                    <div class="note">
                                        @*<a href="@Url.Action("forgotpassword", "account")" style="font-size: 13px"><i></i> Şifremi Unuttum?</a>*@
                                    </div>
                                </section>

                                <section>
                                    <label class="checkbox">
                                        <input type="checkbox" name="rememberMe" value="true" checked="checked">
                                        <input type="hidden" name="rememberMe" value="false" />
                                        <i></i>Oturumu Açık Tut
                                    </label>
                                </section>
                                @*@Html.Captcha("Refresh", "Güvenlik Kodu:", 5, "Zorunlu Alan!", true) <br /> *@
                                <div class="g-recaptcha" data-sitekey="6LdEMToUAAAAAHpztMXPMasHUx5_15-7NikSHGjC"></div>
                                <p> @ViewBag.Message </p><p>
                                    <input type="submit" class="btn btn-primary" style="float: right; font-size: 14px; text-align: center; padding: 6px 30px;"
                                           value="Giriş" />
                                </p>




                            </fieldset>

                        </form>
                    </div>
                    <fieldset>
                        <section>
                            @*<center>
                                    <a href="@Url.Action("Register", "account")" style="border-style: groove; margin-left: 5%; width: 25%; font-size: 15px" class="btn btn-danger">Ücretsiz Denemek için <br>Tıklayın</a>
                                </center>*@
                        </section>
                    </fieldset>
                </div>
            </div>
        </div>
    </div>
</body>








